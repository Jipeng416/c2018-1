#include <stdio.h>
#define LINES 10
#define COLUS 11
void DrawMap(char Map[][COLUS]){
    for (int i=0; i<LINES; i++) printf("%s\n",Map[i]);
}
void playerChoice(int *nextpersonX,int *nextpersonY){
    printf("请输入一个方向 [w,a,s,d]分别代表[上下左右]\n\n");
    char direction = ' ';
    scanf(" %c",&direction);
    switch (direction) {
        case 'w':
            (*nextpersonX)--;
            break;
        case 'a':
            (*nextpersonY)--;
            break;
        case 's':
            (*nextpersonX)++;
            break;
        case 'd':
            (*nextpersonY)++;
            break;
        default:
            printf("\n输入错误 请重新输入:\n");
            break;
    }
}
void swap(char Map[][COLUS],int *x1,int *y1,int *x2,int *y2){
    char temp;
    temp = Map[*x1][*y1];
    Map[*x1][*y1] = Map[*x2][*y2];
    Map[*x2][*y2] = temp;
    *x1 = *x2;
    *y1 = *y2;
}
int main()
{
    int personX=1,personY=1;
    char Map[LINES][COLUS] = {
        "##########",
        "#O#     ##",
        "# # ###  #",
        "#   #### #",
        "######   #",
        "#   ## ###",
        "# #    ###",
        "#  #######",
        "##        ",
        "##########"
    };
    DrawMap(Map);
    while (!((personX==8)&&(personY=9))) {
        int nextpersonX = personX;
        int nextpersonY = personY;
        playerChoice(&nextpersonX,&nextpersonY);
        swap(Map, &personX, &personY, &nextpersonX, &nextpersonY);
        DrawMap(Map);
    }
    if(personX == 8 && personY == 9){
        printf("恭喜,胜利!过关~\n");
    }
    return 0;
}

